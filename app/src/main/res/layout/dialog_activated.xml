<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvContent"
        android:layout_width="@dimen/config_zero"
        android:layout_height="wrap_content"
        android:textAppearance="@style/edit_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvDate"
        android:layout_width="@dimen/config_zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/config_margin_24dp"
        android:text="@string/device_list_expire_date_select"
        android:textAppearance="@style/edit_gray"
        app:layout_constraintEnd_toEndOf="@id/tvContent"
        app:layout_constraintStart_toStartOf="@id/tvContent"
        app:layout_constraintTop_toBottomOf="@id/tvContent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/dateBtn"
        android:layout_width="@dimen/config_zero"
        android:layout_height="@dimen/config_btn_height_simple"
        android:layout_marginTop="@dimen/config_margin_8dp"
        android:background="@drawable/history_date_bg"
        android:textAppearance="@style/simple_history_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tvContent"
        app:layout_constraintStart_toStartOf="@id/tvContent"
        app:layout_constraintTop_toBottomOf="@id/tvDate" />

</android.support.constraint.ConstraintLayout>