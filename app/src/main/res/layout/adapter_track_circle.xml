<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_white"
        android:orientation="vertical">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.xuexiang.xui.widget.imageview.RadiusImageView
                android:id="@+id/iv_portrait"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                app:srcCompat="@mipmap/ic_default_pigeon_marker"
                app:riv_is_circle="true"
                app:riv_is_touch_select_mode_enabled="false" />

            <FrameLayout
                android:id="@+id/fl_enter_map"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_arrow_right_grey"
                    android:layout_gravity="center"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_portrait"
                android:layout_toStartOf="@id/fl_enter_map"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/normal_gray"
                    android:layout_marginTop="@dimen/margin_4" />

                <TextView
                    android:id="@+id/tv_subject"
                    android:textAppearance="@style/normal_gray"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:textAppearance="@style/normal_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textAppearance="@style/normal_gray"
            android:layout_marginStart="10dp"
            android:id="@+id/tv_period"/>


            <RelativeLayout
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_gradual"
                android:padding="1dp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/relative"
                tools:targetApi="lollipop">

                <ImageView
                    android:id="@+id/iv_screenshot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    android:background="@mipmap/ic_default_pigeon_marker"
                    android:padding="0dp" />

            </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_marginStart="10dp"
                android:id="@+id/ll_thumbs_up"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/iv_thumbs_up"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_thumbs_up"/>

                <TextView
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_marginStart="4dp"
                    android:id="@+id/tv_count_thumbs_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <FrameLayout
                android:layout_marginStart="40dp"
                android:id="@+id/fl_delete"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/node_delete"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/delete"/>

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:id="@+id/tv_views"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>