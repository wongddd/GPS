<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    tools:context=".ui.activity.HistoryAMapNewActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/include_toolbar" />

    <fragment
        android:id="@+id/history_google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_toolbar" />

    <RelativeLayout
        android:id="@+id/tracking_message_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@drawable/translucent_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_toolbar">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tracking_google_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:maxLines="2"
            android:minLines="1" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tracking_google_weather_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tracking_google_message_content"
            android:layout_marginHorizontal="2dp"
            android:maxLines="2" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/history_google_map_type_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/margin_24"
        android:layout_marginTop="@dimen/margin_24"
        android:background="@drawable/map_type"
        android:contentDescription=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tracking_message_panel" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/iv_information"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/margin_4"
        android:background="@drawable/btn_information"
        android:contentDescription=""
        app:layout_constraintEnd_toEndOf="@id/history_google_map_type_btn"
        app:layout_constraintTop_toBottomOf="@id/history_google_map_type_btn" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/iv_locus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/margin_4"
        android:background="@mipmap/ic_share_btn_normal"
        android:contentDescription=""
        app:layout_constraintEnd_toEndOf="@id/history_google_map_type_btn"
        app:layout_constraintTop_toBottomOf="@id/iv_information" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/tracking_google_locus_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/margin_4"
        android:background="@mipmap/ic_locus"
        android:contentDescription=""
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/history_google_map_type_btn"
        app:layout_constraintTop_toBottomOf="@id/iv_locus" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/tracking_show_marker"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/margin_4"
        android:background="@drawable/show_marker_btn"
        android:contentDescription=""
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/history_google_map_type_btn"
        app:layout_constraintTop_toBottomOf="@id/tracking_google_locus_btn" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/history_google_constraintlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_24"
        android:background="@drawable/translucent_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/history_google_map_type_btn"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/history_google_play_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/margin_8"
            android:background="@drawable/history_play"
            android:contentDescription=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/history_google_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8"
            android:text="@string/history_progress"
            android:textAppearance="@style/small_gray"
            app:layout_constraintStart_toEndOf="@id/history_google_play_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <SeekBar
            android:id="@+id/history_google_progress_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/history_google_progress"
            app:layout_constraintTop_toBottomOf="@id/history_google_progress" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/history_google_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_speed"
            android:textAppearance="@style/small_gray"
            app:layout_constraintStart_toStartOf="@id/history_google_progress"
            app:layout_constraintTop_toBottomOf="@id/history_google_progress_seekbar" />

        <SeekBar
            android:id="@+id/history_google_speed_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/history_google_progress_seekbar"
            app:layout_constraintStart_toStartOf="@id/history_google_progress"
            app:layout_constraintTop_toBottomOf="@id/history_google_speed" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/history_google_zoom_out_btn"
        android:layout_width="33dp"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/margin_24"
        android:background="@drawable/zoom_out"
        android:contentDescription=""
        app:layout_constraintBottom_toTopOf="@id/history_google_constraintlayout"
        app:layout_constraintEnd_toEndOf="@id/history_google_map_type_btn" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/history_google_zoom_in_btn"
        android:layout_width="33dp"
        android:layout_height="42dp"
        android:background="@drawable/zoom_in"
        android:contentDescription=""
        app:layout_constraintBottom_toTopOf="@id/history_google_zoom_out_btn"
        app:layout_constraintEnd_toEndOf="@id/history_google_map_type_btn" />


</android.support.constraint.ConstraintLayout>