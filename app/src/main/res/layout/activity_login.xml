<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    tools:context=".ui.activity.LoginActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/layout_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivLogo"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_40"
                android:layout_marginEnd="@dimen/margin_40"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clServer"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_40"
                android:background="@drawable/white_round_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivLogo">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivServer"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:contentDescription="服务器"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/login_server_ic" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/etServer"
                    style="@style/edittext_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:background="@null"
                    android:hint="server_hint"
                    android:inputType="textWebEditText"
                    android:labelFor="@+id/etServer"
                    android:maxLength="50"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivServer"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clUsername"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/white_round_bg"
                app:layout_constraintEnd_toEndOf="@id/clServer"
                app:layout_constraintStart_toStartOf="@id/clServer"
                app:layout_constraintTop_toBottomOf="@id/clServer">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivUsername"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/margin_16"
                    android:contentDescription="server"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/login_user_ic" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/etUsername"
                    style="@style/edittext_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:background="@null"
                    android:hint="username_hint"
                    android:inputType="text"
                    android:labelFor="@+id/etUsername"
                    android:maxLength="20"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivUsername"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/clPwd"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/white_round_bg"
                app:layout_constraintEnd_toEndOf="@id/clServer"
                app:layout_constraintStart_toStartOf="@id/clServer"
                app:layout_constraintTop_toBottomOf="@id/clUsername">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivPwd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:contentDescription="server"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/login_pwd_ic" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/etPwd"
                    style="@style/edittext_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:background="@null"
                    android:hint="@string/pwd_hint"
                    android:inputType="textPassword"
                    android:labelFor="@+id/etPwd"
                    android:maxLength="20"
                    android:maxLines="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivPwd"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/mapSelectBtn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/btn_white_round_bg"
                android:gravity="start|center_vertical"
                android:paddingStart="52dp"
                android:paddingEnd="52dp"
                android:text="@string/google_map"
                android:textAppearance="@style/edit_black"
                app:layout_constraintEnd_toEndOf="@id/clServer"
                app:layout_constraintStart_toStartOf="@id/clServer"
                app:layout_constraintTop_toBottomOf="@id/clPwd" />

            <ToggleButton
                android:id="@+id/tbRemember"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@drawable/remember_info"
                android:textOff=""
                android:textOn=""
                app:layout_constraintStart_toStartOf="@id/clServer"
                app:layout_constraintTop_toBottomOf="@id/mapSelectBtn" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:maxLines="1"
                android:text="remember_login_info"
                android:textAppearance="@style/normal_black"
                app:layout_constraintBottom_toBottomOf="@id/tbRemember"
                app:layout_constraintEnd_toEndOf="@id/clServer"
                app:layout_constraintStart_toEndOf="@id/tbRemember"
                app:layout_constraintTop_toTopOf="@id/tbRemember" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/loginBtn"
                style="@style/login_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_16"
                android:text="@string/login"
                app:layout_constraintEnd_toEndOf="@id/clServer"
                app:layout_constraintStart_toStartOf="@id/clServer"
                app:layout_constraintTop_toBottomOf="@id/tbRemember" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/rootView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/include_toolbar" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>