<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="20dp"
    android:paddingVertical="1dp"
    android:paddingHorizontal="5dp">

    <ImageView
        android:id="@+id/node_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_arrow_black" />

    <ImageView
        android:id="@+id/node_sign"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/node_arrow" />

    <ImageView
        android:id="@+id/node_edit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/node_value"
        android:background="@mipmap/ic_edit_grey" />

    <ImageView
        android:id="@+id/node_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/node_edit"
        android:background="@mipmap/ic_delete_grey" />

    <ImageView
        android:id="@+id/node_switch"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        android:layout_toEndOf="@id/node_delete"
        android:background="@mipmap/ic_switch_grey" />

    <TextView
        android:id="@+id/node_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/node_sign"
        android:textColor="#555555"
        android:textSize="20sp" />


</RelativeLayout>
