<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    tools:context=".ui.activity.ReportActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/include_toolbar" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/report_start_date_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_24"
                android:background="@drawable/history_date_bg"
                android:textAppearance="@style/edit_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/report_start" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/report_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24"
                android:text="@string/history_start_date"
                android:textAppearance="@style/edit_gray"
                app:layout_constraintStart_toStartOf="@id/report_start_date_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/report_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:text="@string/history_end_date"
                android:textAppearance="@style/edit_gray"
                app:layout_constraintStart_toStartOf="@id/report_start_date_btn"
                app:layout_constraintTop_toBottomOf="@id/report_start_date_btn" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/report_end_date_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/history_date_bg"
                android:textAppearance="@style/edit_black"
                app:layout_constraintEnd_toEndOf="@id/report_start_date_btn"
                app:layout_constraintStart_toStartOf="@id/report_start_date_btn"
                app:layout_constraintTop_toBottomOf="@id/report_end" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/report_search_btn"
                style="@style/login_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginBottom="@dimen/margin_24"
                android:text="@string/search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/report_start_date_btn"
                app:layout_constraintStart_toStartOf="@id/report_start_date_btn"
                app:layout_constraintTop_toBottomOf="@id/report_end_date_btn" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>