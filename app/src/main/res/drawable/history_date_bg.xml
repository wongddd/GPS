<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />
            <stroke android:width="@dimen/line_width" android:color="@color/colorPrimary" />
            <corners android:radius="@dimen/button_radius" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/item_pressed" android:startColor="@color/item_pressed" />
            <stroke android:width="@dimen/line_width" android:color="@color/colorPrimary" />
            <corners android:radius="@dimen/button_radius" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />
            <stroke android:width="@dimen/line_width" android:color="@color/colorPrimary" />
            <corners android:radius="@dimen/button_radius" />
        </shape>
    </item>

</selector>